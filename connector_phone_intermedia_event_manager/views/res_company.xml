<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_company_intermedia_api_form" model="ir.ui.view">
        <field name="name">Company Intermedia API</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Intermedia API">
                    <group col="4">
                        <field name="intermedia_user" />
                        <field name="intermedia_password"/>
                        <field name="intermedia_server_address"/>
                        <field name="intermedia_token"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

</odoo>
