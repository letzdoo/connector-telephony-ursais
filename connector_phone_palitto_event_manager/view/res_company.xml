<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_company_pcs_api_form" model="ir.ui.view">
        <field name="name">Company PCS API</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="PCS API">
                    <group col="4">
                        <field name="server_address" />
                    </group>
                </page>
            </notebook>
            <field name="parent_id" position="after">
                <field name="popup_time" />
            </field>
        </field>
    </record>

    <record id="res_config_settings_view_form_popup_time" model="ir.ui.view">
        <field name="name">popup_time.base.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <field name="number_of_digits_to_match_from_end" position="after">
                <label for="popup_time" class="col-4 col-lg-4 o_light_label" string="Popup Time (Sec)"/>
                <field name="popup_time"/>
            </field>
        </field>
    </record>

</odoo>
